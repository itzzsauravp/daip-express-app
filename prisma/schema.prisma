generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  username  String   @unique
  password  String
  wallet    Wallet?
  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")

  sentTransactions     Transaction[] @relation("sender_user")
  receivedTransactions Transaction[] @relation("receiver_user")

  @@map("users")
}

model Wallet {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @unique @map("user_id") @db.Uuid
  user      User     @relation(fields: [userId], references: [id])
  balance   Decimal  @default(0) @db.Decimal(12, 2)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("wallets")
}

model Transaction {
  id       String @id @default(uuid()) @db.Uuid
  senderId String @map("sender_id") @db.Uuid
  sender   User   @relation("sender_user", fields: [senderId], references: [id])

  receiverId String @map("receiver_id") @db.Uuid
  receiver   User   @relation("receiver_user", fields: [receiverId], references: [id])

  amount    Decimal  @map("amount") @db.Decimal(12, 2)
  createdAt DateTime @default(now()) @map("created_at")

  @@index([senderId, createdAt])
  @@index([receiverId, createdAt])
  @@index([createdAt])
  @@map("transactions")
}
